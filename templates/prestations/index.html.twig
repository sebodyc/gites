<div class="container">
    <div class="row">
        <div class="col m-3">
            <div class="card-deck">
                {% for prestation in prestations %}
                    <div class="card "   >
                        <div class="card-body" >
                            {% if prestation.image %}
                                <img  class="card-img-top" src="{{ asset('images/products/') }}{{ prestation.image }}" alt="{{ prestation.name }}">
                            {% endif %}
                            <h5 class="card-title">{{ prestation.name }}</h5>
                            <p class="card-text" >{{ prestation.description }}</p>
                            <div class="card-footer">
                                {% if prestation.prix %}
                                <p>{{ prestation.prix }}</p>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

        </div>
    </div>
